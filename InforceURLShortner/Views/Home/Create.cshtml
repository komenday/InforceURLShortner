@model bool
@{
    ViewData["Title"] = "Create";
}

<h1>Create short URL</h1>
<hr />
@if (Model)
{
    <div class="alert alert-danger" role="alert">
        This Url is already in a list!
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label name="fullUrl" class="control-label"></label>
                <input name="fullUrl" class="form-control" placeholder="enter URL..."/>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>